<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.admin.DetalleAnimalActivity">

    <!-- AppBar con Imagen del Animal -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">

            <!-- Imagen de fondo -->
            <ImageView
                android:id="@+id/iv_animal_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#CCCCCC"
                android:contentDescription="Foto de perfil del animal"
                app:layout_collapseMode="parallax" />

            <!-- Gradiente oscuro sobre la imagen -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:background="@drawable/photo_overlay_gradient" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:titleTextColor="@android:color/white">

                <!-- Botones de Acción Superior -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp">

                    <!-- Botón para Editar (RF-07) -->
                    <ImageView
                        android:id="@+id/ic_edit"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_edit"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Editar animal"
                        android:clickable="true"
                        android:focusable="true"
                        app:tint="@android:color/white" />

                    <!-- Botón para Exportar -->
                    <ImageView
                        android:id="@+id/ic_share"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/ic_share"
                        android:contentDescription="Exportar expediente"
                        android:clickable="true"
                        android:focusable="true"
                        app:tint="@android:color/white" />

                    <ImageView
                        android:id="@+id/ic_assign_volunteer"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_volunteer"
                        android:contentDescription="Asignar voluntario"
                        android:clickable="true"
                        android:focusable="true"
                        app:tint="@android:color/white" />


                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <!-- Contenedor de Pestañas (CORREGIDO) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Pestañas de Navegación -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="4dp"
            app:tabMode="fixed"
            app:tabIndicatorColor="#388E3C"
            app:tabTextColor="#666666"
            app:tabSelectedTextColor="#388E3C" />

        <!-- Contenido de las Pestañas -->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- FAB para acciones rápidas -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_edit"
        app:backgroundTint="#FF9800"
        app:tint="@android:color/white"
        android:layout_gravity="bottom|end"
        android:contentDescription="Acción rápida de expediente" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>