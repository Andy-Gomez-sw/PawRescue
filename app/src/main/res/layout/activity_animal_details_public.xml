<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imagen del Animal -->
        <ImageView
            android:id="@+id/ivAnimalDetailPhoto"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:contentDescription="Foto del animal" />

        <!-- Información -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDetailNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primary_green"
                android:text="Nombre" />

            <TextView
                android:id="@+id/tvDetailRaza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"
                android:text="Raza" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tvDetailEdad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="Edad" />

                <TextView
                    android:id="@+id/tvDetailSexo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="Sexo" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDetailDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:text="Descripción" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSolicitarAdopcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solicitar Adopción"
                android:layout_marginTop="24dp"
                android:padding="16dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>