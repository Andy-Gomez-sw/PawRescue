<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.volunteer.VolunteerAnimalDetailActivity">

    <!-- Card con info bÃ¡sica del animal -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAnimalInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imgAnimal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="Foto del animal" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">



                <TextView
                    android:id="@+id/tvNombreAnimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del animal"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEspecieAnimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Especie / Raza"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/tvEstadoAnimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado en el refugio"
                    android:textSize="13sp"
                    android:textColor="@android:color/darker_gray"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- TÃ­tulo secciÃ³n de acciones -->
    <TextView
        android:id="@+id/tvAccionesTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acciones rÃ¡pidas"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cardAnimalInfo"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Primera fila de acciones: observaciÃ³n + foto rÃ¡pida -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegistrarObservacion"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“ ObservaciÃ³n"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cornerRadius="50dp"
        app:iconGravity="textStart"
        app:layout_constraintTop_toBottomOf="@id/tvAccionesTitulo"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubirFotoRapida"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“· Foto rÃ¡pida"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        app:cornerRadius="50dp"
        app:iconGravity="textStart"
        app:layout_constraintTop_toBottomOf="@id/tvAccionesTitulo"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Segunda fila de acciones: atendido, cita, problema -->
    <LinearLayout
        android:id="@+id/layoutAcciones2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnRegistrarObservacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAtendidoHoy"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ… Atendido hoy"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:iconGravity="textStart"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmarCita"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Confirmar cita"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:iconGravity="textStart"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReportarProblema"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš ï¸ Problema"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            app:iconGravity="textStart" />
    </LinearLayout>

    <!-- TÃ­tulo del historial -->
    <TextView
        android:id="@+id/tvHistorialTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial de avances"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutAcciones2"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Lista del historial -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHistorial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvHistorialTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
