<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Captura Foto del Animal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="20dp"/>

        <!-- Camera Preview Container -->
        <FrameLayout
            android:id="@+id/cameraPreviewContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg_camera_preview"
            android:layout_marginBottom="20dp">

            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <!-- Placeholder -->
            <LinearLayout
                android:id="@+id/llPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="80sp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCapture"
                    style="@style/Widget.App.Button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:cornerRadius="35dp"
                    app:strokeColor="@color/primary_green"
                    app:strokeWidth="4dp"
                    android:backgroundTint="@color/white"/>

            </LinearLayout>

            <!-- Captured Image -->
            <ImageView
                android:id="@+id/ivCapturedImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

            <!-- Retake Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetake"
                style="@style/Widget.App.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="16dp"
                android:text="Tomar otra"
                android:visibility="gone"
                android:backgroundTint="@color/semi_transparent"/>

        </FrameLayout>

        <!-- Upload from Gallery -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGallery"
            style="@style/Widget.App.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subir desde galería"
            android:layout_marginBottom="20dp"/>

        <!-- Tip Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/badge_treatment_bg"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ℹ"
                    android:textSize="24sp"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consejo:"
                        android:textStyle="bold"
                        android:textColor="@color/badge_treatment_text"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toma varias fotos desde diferentes ángulos"
                        android:textColor="@color/badge_treatment_text"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Additional Photos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fotos adicionales (opcional)"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </LinearLayout>

</ScrollView>