<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar / encabezado -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarSeguimiento"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#4CAF50" />

        <!-- Card del animal -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivAnimalPhoto"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_pet_placeholder" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvAnimalName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del animal"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/tvFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Último reporte: --/--/----"
                        android:textSize="14sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Estado general (igual que PostAdopcion, solo lectura) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado general"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardExcellent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="12dp"
                android:clickable="false"
                android:focusable="false"
                app:cardBackgroundColor="@android:color/black">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Excelente"
                    android:textColor="@android:color/white" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="12dp"
                android:clickable="false"
                android:focusable="false"
                app:cardBackgroundColor="@android:color/black">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Bien"
                    android:textColor="@android:color/white" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="12dp"
                android:clickable="false"
                android:focusable="false"
                app:cardBackgroundColor="@android:color/black">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Regular"
                    android:textColor="@android:color/white"
                    />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAttention"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                app:cardCornerRadius="12dp"
                android:clickable="false"
                android:focusable="false"
                app:cardBackgroundColor="@android:color/black">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Atención"
                    android:textColor="@android:color/white" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Checkboxes de bienestar (solo lectura) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbEatWell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Come bien"
                android:textColor="@android:color/black"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se mantiene activo"
                android:textColor="@android:color/black"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbAdapted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adaptado al hogar"
                android:textColor="@android:color/black"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbVet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visita al veterinario"
                android:textColor="@android:color/black"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <!-- Comentarios -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentarios del adoptante"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:minHeight="80dp"
            android:padding="12dp"
            android:text="Sin comentarios."
            android:textColor="@android:color/black" />

        <!-- Mensaje si no hay reporte -->
        <TextView
            android:id="@+id/tvEmptyReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Este animal aún no tiene seguimientos post adopción."
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone"
            android:textColor="@android:color/black" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
