<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rescate.NuevoRescateActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.App.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="Nuevo Rescate"
        app:titleTextColor="@color/white">

        <TextView
            android:id="@+id/tvStepIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:text="1/4"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Step Indicator -->
    <LinearLayout
        android:id="@+id/llStepIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <View
            android:id="@+id/step1"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@color/primary_green"
            android:layout_marginEnd="8dp"/>

        <View
            android:id="@+id/step2"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@color/border_color"
            android:layout_marginEnd="8dp"/>

        <View
            android:id="@+id/step3"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@color/border_color"
            android:layout_marginEnd="8dp"/>

        <View
            android:id="@+id/step4"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@color/border_color"/>

    </LinearLayout>

    <!-- ViewPager for Steps -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/llStepIndicator"
        app:layout_constraintBottom_toTopOf="@id/llButtons"
        android:orientation="horizontal"/>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/background_white"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Widget.App.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/new_rescue_back"
            android:visibility="gone"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            style="@style/Widget.App.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/new_rescue_next"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Offline Indicator -->
    <TextView
        android:id="@+id/tvOfflineIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent_orange"
        android:padding="8dp"
        android:text="@string/msg_offline_mode"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/llButtons"/>

</androidx.constraintlayout.widget.ConstraintLayout>