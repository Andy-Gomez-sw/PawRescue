<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.volunteer.VolunteerMyAppointmentActivity">

    <!-- BANNER VERDE -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_green"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Volver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Reporte de cita"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- CONTENIDO SCROLLEABLE -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- DATOS DE LA CITA / ANIMAL -->
            <TextView
                android:id="@+id/tvAnimalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cita para adoptar a ..."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                tools:text="Cita para adoptar a Max" />

            <TextView
                android:id="@+id/tvUsuarioEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Usuario: correo@ejemplo.com"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                tools:text="Usuario: joshua@example.com" />

            <TextView
                android:id="@+id/tvFechaHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Fecha: --/--/---- --:--"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                tools:text="Fecha: 24/11/2025 12:00" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray" />

            <!-- CHECKLIST -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Checklist de visita"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/cbIneRecibida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INE recibida y verificada"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/cbComprobanteRecibido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comprobante de domicilio recibido"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/cbDomicilioAdecuado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Domicilio adecuado para el animal"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/cbActitudPositiva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actitud positiva del adoptante"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/cbExperienciaPrevia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuenta con experiencia previa con mascotas"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/cbRecomiendaAprobacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se recomienda aprobación de la adopción"
                android:textColor="@android:color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray" />

            <!-- DOCUMENTOS DE LA SOLICITUD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Documentos del adoptante"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(INE frente y reverso, comprobante de domicilio)"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/llDocumentosContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp" />

            <!-- (Se agregarán TextViews clicables desde el código) -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray" />

            <!-- OBSERVACIONES -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Observaciones de la visita"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/etObservaciones"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="4dp"
                android:gravity="top|start"
                android:hint="Describe lo que observaste durante la visita..."
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:inputType="textMultiLine" />

            <!-- RECOMENDACIONES -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Recomendaciones"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/etRecomendaciones"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="4dp"
                android:gravity="top|start"
                android:hint="Opcional: recomendaciones para el adoptante o el refugio"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:inputType="textMultiLine" />

            <!-- Botón oculto (ya no se usa, pero el código lo referencia) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubirDocumento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Subir documento (no usado)"
                android:textAllCaps="false"
                android:visibility="gone" />

            <!-- ENVIAR REPORTE -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnviarReporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:text="Enviar reporte"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary_green"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
