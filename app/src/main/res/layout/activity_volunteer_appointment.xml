<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bg_gradient_green"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Volver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reporte de Cita"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </com.google.android.material.appbar.MaterialToolbar>

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Info de la cita -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvAnimalName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cita para adoptar a Max"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvUsuarioEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usuario: juan@example.com"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvFechaHora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: 2025-01-30 a las 10:00"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SecciÃ³n: Documentos Recibidos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“„ Documentos Recibidos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp" />

            <CheckBox
                android:id="@+id/cbIneRecibida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IdentificaciÃ³n oficial (INE)"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <CheckBox
                android:id="@+id/cbComprobanteRecibido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comprobante de domicilio"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <!-- SecciÃ³n: EvaluaciÃ³n -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âœ… EvaluaciÃ³n del Usuario"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp" />

            <CheckBox
                android:id="@+id/cbDomicilioAdecuado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El domicilio es adecuado para la mascota"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <CheckBox
                android:id="@+id/cbActitudPositiva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actitud responsable y positiva"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <CheckBox
                android:id="@+id/cbExperienciaPrevia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experiencia previa con mascotas"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <CheckBox
                android:id="@+id/cbRecomiendaAprobacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se recomienda la aprobaciÃ³n de la adopciÃ³n"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <!-- Observaciones -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ—’ï¸ Observaciones de la visita"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etObservaciones"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top|start"
                android:background="@drawable/bg_edittext_rounded"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:hint="Describe cÃ³mo se comportÃ³ el usuario, ambiente del hogar, etc." />

            <!-- Recomendaciones -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“Œ Recomendaciones finales"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etRecomendaciones"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top|start"
                android:background="@drawable/bg_edittext_rounded"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:hint="Anota si recomiendas aprobar, posponer o rechazar la adopciÃ³n." />

            <!-- Documentos subidos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“Ž Documentos subidos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/llDocumentosContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp" />

            <!-- BotÃ³n subir documento -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubirDocumento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subir fotografÃ­a o documento"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary_green"
                android:layout_marginTop="16dp"
                app:cornerRadius="8dp" />

            <!-- BotÃ³n enviar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnviarReporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar reporte al admin"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary_green"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
