<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.refugio.pawrescue.ui.theme.dashboard.DashboardFragment"
        android:label="Panel"
        tools:layout="@layout/fragment_dashboard">

        <action
            android:id="@+id/action_dashboardFragment_to_perfilAnimalFragment"
            app:destination="@id/perfilAnimalFragment" />

        <action
            android:id="@+id/action_dashboardFragment_to_perfilFragment"
            app:destination="@id/profileFragment" />

        <action
            android:id="@+id/action_dashboardFragment_to_statsFragment"
            app:destination="@id/statsFragment" />

        <!-- === ACCIÓN AÑADIDA === -->
        <!-- Esta es la acción que tu DashboardFragment estaba buscando -->
        <action
            android:id="@+id/action_dashboardFragment_to_gestionarSolicitudDialog"
            app:destination="@id/gestionarSolicitudDialog" />

    </fragment>

    <fragment
        android:id="@+id/listaAnimalesFragment"
        android:name="com.refugio.pawrescue.ui.theme.animales.ListaAnimalesFragment"
        android:label="Animales"
        tools:layout="@layout/fragment_lista_animales">
        <action
            android:id="@+id/action_listaAnimalesFragment_to_perfilAnimalFragment"
            app:destination="@id/perfilAnimalFragment" />

        <action
            android:id="@+id/action_listaAnimalesFragment_to_statsFragment"
            app:destination="@id/statsFragment" />
    </fragment>

    <fragment
        android:id="@+id/perfilAnimalFragment"
        android:name="com.refugio.pawrescue.ui.theme.animales.PerfilAnimalFragment"
        android:label="Perfil Animal"
        tools:layout="@layout/fragment_perfil_animal">
        <argument
            android:name="animalId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/citasFragment"
        android:name="com.refugio.pawrescue.ui.theme.admin.CitasFragment"
        android:label="Citas"
        tools:layout="@layout/fragment_citas" />

    <fragment
        android:id="@+id/donacionesFragment"
        android:name="com.refugio.pawrescue.ui.theme.admin.DonacionesFragment"
        android:label="Fondos"
        tools:layout="@layout/fragment_donaciones" />

    <fragment
        android:id="@+id/voluntariosFragment"
        android:name="com.refugio.pawrescue.ui.theme.admin.VoluntariosFragment"
        android:label="Voluntarios"
        tools:layout="@layout/fragment_voluntarios" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.refugio.pawrescue.ui.theme.profile.ProfileFragment"
        android:label="Perfil de Usuario"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/statsFragment"
        android:name="com.refugio.pawrescue.ui.theme.stats.StatsFragment"
        android:label="Estadísticas"
        tools:layout="@layout/fragment_stats" />

    <!-- === DESTINO DE DIÁLOGO AÑADIDO === -->
    <!-- Aquí definimos el diálogo para que la acción pueda encontrarlo -->
    <dialog
        android:id="@+id/gestionarSolicitudDialog"
        android:name="com.refugio.pawrescue.ui.theme.admin.GestionarSolicitudDialog"
        android:label="Gestionar Solicitud"
        tools:layout="@layout/dialog_gestionar_solicitud">
        <argument
            android:name="solicitudId"
            app:argType="string" />
    </dialog>

</navigation>